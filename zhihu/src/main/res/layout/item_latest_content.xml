<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_latest_content_height"
    android:layout_marginBottom="@dimen/item_latest_content_margin_bottom"
    android:layout_marginTop="@dimen/item_latest_content_margin_top"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/item_latest_content_card_corner_radius"
    app:cardElevation="@dimen/item_latest_content_card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/item_latest_content_padding">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/item_latest_content_title_margin_end"
            android:layout_toStartOf="@id/image_preview"
            android:lineSpacingExtra="@dimen/item_latest_content_title_line_spacing_extra"
            android:maxLines="3"
            android:padding="@dimen/item_latest_content_title_padding"
            android:textColor="@color/colorItemTextNormal"
            android:textSize="@dimen/item_latest_content_title_size" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_preview"
            android:layout_width="@dimen/item_latest_content_image_width"
            android:layout_height="@dimen/item_latest_content_image_height"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:src="@drawable/pic_default_item" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/pic_multi" />

    </RelativeLayout>


</android.support.v7.widget.CardView>