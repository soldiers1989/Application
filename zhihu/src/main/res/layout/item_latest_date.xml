<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/item_latest_date_text_padding_bottom"
        android:paddingLeft="@dimen/item_latest_date_text_padding_left"
        android:paddingTop="@dimen/item_latest_date_text_padding_top"
        android:textColor="@color/colorItemTextExtra"
        android:textSize="@dimen/item_latest_date_text_size" />

    <include layout="@layout/item_latest_content" />

</LinearLayout>