<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/chad_1dp"
    android:layout_marginLeft="@dimen/chad_1dp"
    android:layout_marginRight="@dimen/chad_1dp"
    android:layout_marginTop="@dimen/chad_1dp"
    app:cardBackgroundColor="@color/color_item"
    app:cardCornerRadius="@dimen/chad_10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/chad_10dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_title"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>