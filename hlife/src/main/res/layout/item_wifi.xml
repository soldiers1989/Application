<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/chad_10dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wifi" />

    <com.chad.hlife.ui.view.MarqueeTextView
        android:id="@+id/text_name"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chad_10dp"
        android:ellipsize="marquee"
        android:paddingTop="@dimen/chad_5dp"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@id/image_wifi" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_position"
        style="@style/SubTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chad_10dp"
        android:layout_marginTop="@dimen/chad_10dp"
        android:textColor="@color/colorText"
        app:layout_constraintLeft_toRightOf="@id/image_wifi"
        app:layout_constraintTop_toBottomOf="@id/text_name" />

    <com.chad.hlife.ui.view.MarqueeTextView
        android:id="@+id/text_address"
        style="@style/SubTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chad_10dp"
        android:layout_marginTop="@dimen/chad_5dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/colorText"
        app:layout_constraintLeft_toRightOf="@+id/image_wifi"
        app:layout_constraintTop_toBottomOf="@id/text_position" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_distance"
        style="@style/SubTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chad_10dp"
        android:layout_marginTop="@dimen/chad_5dp"
        android:textColor="@color/colorText"
        app:layout_constraintLeft_toRightOf="@id/image_wifi"
        app:layout_constraintTop_toBottomOf="@id/text_address" />

</android.support.constraint.ConstraintLayout>