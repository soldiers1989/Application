<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/chad_1dp"
    android:layout_marginTop="@dimen/chad_1dp"
    app:cardBackgroundColor="@color/color_item"
    app:cardCornerRadius="@dimen/chad_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/chad_10dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_preview"
            android:layout_width="@dimen/chad_80dp"
            android:layout_height="@dimen/chad_80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic_placeholder_image" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_name"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/chad_10dp"
            android:layout_toEndOf="@id/image_preview"
            android:maxLines="3" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_description"
            style="@style/SubTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>