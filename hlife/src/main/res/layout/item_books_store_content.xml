<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item"
    android:padding="@dimen/chad_10dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_preview"
        android:layout_width="@dimen/chad_90dp"
        android:layout_height="@dimen/chad_120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_placeholder_image" />

    <LinearLayout
        android:layout_width="@dimen/chad_200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chad_10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/image_preview">

        <com.chad.hlife.ui.view.MarqueeTextView
            android:id="@+id/text_title"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_catalog"
            style="@style/SubTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/chad_10dp"
            android:textColor="@color/colorText" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_reading"
            style="@style/SubTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/chad_5dp"
            android:textColor="@color/colorText" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_tags"
            style="@style/SubTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/chad_5dp"
            android:textColor="@color/colorText" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/chad_10dp"
        android:text="@string/buy"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/chad_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
