<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/chad_1dp"
    android:layout_marginTop="@dimen/chad_1dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/chad_10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/chad_10dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_title"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_event"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/chad_10dp"
            android:textSize="@dimen/chad_16sp"
            app:layout_constraintTop_toBottomOf="@id/text_title" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_date"
            style="@style/SubTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/chad_10dp"
            app:layout_constraintTop_toBottomOf="@id/text_event" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>