<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/chad_10dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_preview"
        android:layout_width="@dimen/chad_120dp"
        android:layout_height="@dimen/chad_100dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_placeholder_image" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_name"
        style="@style/TextStyle"
        android:text="红烧狮子头"
        app:layout_constraintLeft_toRightOf="@id/image_preview"
        android:layout_marginStart="@dimen/chad_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_ctg_title"
        style="@style/SubTextStyle"
        android:text="红烧狮子头"
        android:layout_marginTop="@dimen/chad_10dp"
        app:layout_constraintLeft_toRightOf="@id/image_preview"
        android:layout_marginStart="@dimen/chad_10dp"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>