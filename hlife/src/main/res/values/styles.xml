<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <!-- 主界面Theme，主要是为了修改DrawerArrow颜色 -->
    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <!-- 登录界面Theme -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!-- 注册界面Theme -->
    <style name="RegisterTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!-- 修改密码界面Theme -->
    <style name="UpdatePasswordTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!-- 详情页Theme -->
    <style name="DetailTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryDetail</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!-- 知乎日报Theme -->
    <style name="RedTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryRed</item>
    </style>
    <!-- 定义DrawerArrow的颜色 -->
    <style name="DrawerArrowStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    <!-- 设置NavigationView的MenuItem字体大小 -->
    <style name="NavigationViewTheme">
        <item name="android:textSize">@dimen/chad_16sp</item>
    </style>
    <!-- 全局文字通用风格 -->
    <style name="TextStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/chad_18sp</item>
    </style>
    <!-- 全局文字副标题通用风格 -->
    <style name="SubTextStyle">
        <item name="android:textColor">@color/colorSubText</item>
        <item name="android:textSize">@dimen/chad_14sp</item>
    </style>
    <!-- 刷新布局文字通用风格 -->
    <style name="RefreshStyle">
        <item name="android:textColor">@color/colorSubText</item>
        <item name="android:textSize">@dimen/chad_16sp</item>
    </style>
    <!-- 全局标签文字通用风格 -->
    <style name="TabTextStyle">
        <item name="android:textSize">@dimen/chad_16sp</item>
    </style>
    <!-- 通用Dialog风格 -->
    <style name="GeneralDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <!-- 支付Dialog风格 -->
    <style name="PayDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationDialog</item>
    </style>
    <!-- 支付Dialog动画 -->
    <style name="AnimationDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/enter_dialog_pay</item>
        <item name="android:windowExitAnimation">@anim/exit_dialog_pay</item>
    </style>
</resources>
