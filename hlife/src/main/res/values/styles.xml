<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorTheme</item>
    </style>
    <!-- 主界面Theme，主要是为了修改DrawerArrow颜色 -->
    <style name="MainTheme" parent="AppTheme">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <!-- 定义DrawerArrow的颜色 -->
    <style name="DrawerArrowStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    <!-- 定义Toolbar标题的字体颜色 -->
    <style name="ToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- 设置NavigationView的MenuItem字体大小 -->
    <style name="NavigationViewTheme">
        <item name="android:textSize">@dimen/chad_16sp</item>
    </style>
    <!-- 全局文字通用风格 -->
    <style name="TextStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/chad_18sp</item>
    </style>
    <!-- 全局文字副标题通用风格 -->
    <style name="SubTextStyle">
        <item name="android:textColor">@color/colorSubText</item>
        <item name="android:textSize">@dimen/chad_16sp</item>
    </style>
</resources>
