<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_just"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Just"
        app:layout_constraintTop_toBottomOf="@+id/btn_create" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_from_array"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Array"
        app:layout_constraintTop_toBottomOf="@+id/btn_just" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_from_iterable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Iterable"
        app:layout_constraintTop_toBottomOf="@+id/btn_from_array" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_defer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Defer"
        app:layout_constraintTop_toBottomOf="@+id/btn_from_iterable" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timer"
        app:layout_constraintTop_toBottomOf="@+id/btn_defer" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_interval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interval"
        app:layout_constraintTop_toBottomOf="@+id/btn_timer" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_interval_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interval Range"
        app:layout_constraintTop_toBottomOf="@+id/btn_interval" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Range"
        app:layout_constraintTop_toBottomOf="@+id/btn_interval_range" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_range_long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Range Long"
        app:layout_constraintTop_toBottomOf="@+id/btn_range" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_range_long" />

</android.support.constraint.ConstraintLayout>