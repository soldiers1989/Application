<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_animator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/pic_animator_value" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_vertical_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vertical Move"
        app:layout_constraintBottom_toBottomOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_parabolic_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parabolic Move"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_vertical_move" />

</android.support.constraint.ConstraintLayout>