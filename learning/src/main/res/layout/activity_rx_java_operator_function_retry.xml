<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retry" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_retry_long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retry(long)"
        app:layout_constraintTop_toBottomOf="@+id/btn_retry" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_retry_predicate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retry(Predicate)"
        app:layout_constraintTop_toBottomOf="@+id/btn_retry_long" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_retry_bi_predicate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retry(BiPredicate)"
        app:layout_constraintTop_toBottomOf="@+id/btn_retry_predicate" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_retry_long_predicate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retry(long, Predicate)"
        app:layout_constraintTop_toBottomOf="@+id/btn_retry_bi_predicate" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_retry_long_predicate" />

</android.support.constraint.ConstraintLayout>