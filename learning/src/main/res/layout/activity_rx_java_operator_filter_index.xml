<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_first_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Element" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_last_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Element"
        app:layout_constraintTop_toBottomOf="@id/btn_first_element" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_element_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Element At"
        app:layout_constraintTop_toBottomOf="@id/btn_last_element" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_element_at_or_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Element At Or Error"
        app:layout_constraintTop_toBottomOf="@id/btn_element_at" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_element_at_or_error" />

</android.support.constraint.ConstraintLayout>