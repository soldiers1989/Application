<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_chain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chain"
        app:layout_constraintTop_toBottomOf="@+id/btn_step" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dispose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dispose"
        app:layout_constraintTop_toBottomOf="@+id/btn_chain" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_dispose" />

</android.support.constraint.ConstraintLayout>