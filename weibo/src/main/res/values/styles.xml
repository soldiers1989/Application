<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorTheme</item>
    </style>
    <!-- 主界面Theme，主要是为了修改DrawerArrow颜色 -->
    <style name="MainTheme" parent="AppTheme">
        <item name="drawerArrowStyle">@style/DrawerArrowToggleStyle</item>
    </style>
    <!-- 定义DrawerArrow的颜色 -->
    <style name="DrawerArrowToggleStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorGeneral</item>
    </style>
    <!-- 定义Toolbar标题的字体大小和颜色 -->
    <style name="ToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/colorGeneralText</item>
    </style>
    <!-- 设置NavigationView的MenuItem字体大小-->
    <style name="NavigationTheme">
        <item name="android:textSize">@dimen/chad_18sp</item>
    </style>
    <!-- 定义全局通用文字的大小和颜色-->
    <style name="TextGeneralStyle">
        <item name="android:textSize">@dimen/chad_18sp</item>
        <item name="android:textColor">@color/colorGeneralText</item>
    </style>

    <style name="UserDescriptionTextStyle">
        <item name="android:textSize">@dimen/chad_15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

</resources>
